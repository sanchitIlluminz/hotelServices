<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llFoodTimingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvBreakfastLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/breakfast"
            android:textColor="@color/food_timing_color"
            android:textSize="@dimen/text_medium"
            app:drawableStartCompat="@drawable/ic_breakfast" />

        <TextView
            android:id="@+id/tvLunchLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/lunch"
            android:textColor="@color/food_timing_color"
            android:textSize="@dimen/text_medium"
            app:drawableStartCompat="@drawable/ic_lunch" />

        <TextView
            android:id="@+id/tvDinnerLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/dinner"
            android:textColor="@color/food_timing_color"
            android:textSize="@dimen/text_medium"
            app:drawableStartCompat="@drawable/ic_dinner" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFoodTimings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llFoodTimingLabel"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvBreakfastTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:paddingStart="28dp"
            android:paddingEnd="0dp"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/text_medium"
            tools:text="2:30am - 10:30 pm" />

        <TextView
            android:id="@+id/tvLunchTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:paddingStart="28dp"
            android:paddingEnd="0dp"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/text_medium"
            tools:text="2:30am - 10:30 pm" />

        <TextView
            android:id="@+id/tvDinnerTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:paddingStart="28dp"
            android:paddingEnd="0dp"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/text_medium"
            tools:text="2:30am - 10:30 pm" />
    </LinearLayout>

</LinearLayout>