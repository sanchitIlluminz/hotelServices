<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:paddingBottom="@dimen/spacing_screen_horizontal">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/text_xxs"
        android:textColor="@color/text_color_2"
        tools:text="Gate of India Mumbai"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color_2"
        tools:text="The India Gate is a war memorial located astride the Rajpath, on the eastern edge of  of New Delhi, formerly called Kingsway."
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="@dimen/app_margin_half_1"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color_2"
        tools:text="Address: Gate of India Mumbai"
        android:layout_below="@id/tvDescription"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color_2"
        tools:text="Address: Gate of India Mumbai"
        android:layout_below="@id/tvAddress"
        android:layout_marginTop="8dp"/>


    <TextView
        android:id="@+id/tvOpened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color_2"
        tools:text="Address: Gate of India Mumbai"
        android:layout_below="@id/tvHeight"
        android:layout_marginTop="8dp"/>
</RelativeLayout>