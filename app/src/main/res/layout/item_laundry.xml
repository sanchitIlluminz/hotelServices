<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="@dimen/app_margin_half_1"
    android:paddingBottom="@dimen/app_margin_half_1"
    android:paddingStart="@dimen/app_margin_1"
    android:paddingEnd="@dimen/app_margin_1">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color_food"
        tools:text="Samosa with Chana and Chutney "
        android:maxLength="50"/>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tvTitle"
        android:layout_below="@id/tvTitle"
        android:fontFamily="@font/inter_regular"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/color_price"
        tools:text="â‚¹250"/>

    <com.illuminz.application.ui.custom.AddMenuItemView
        android:id="@+id/quantityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="36dp"/>

</RelativeLayout>