<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFeedback"
            style="@style/AppButton.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:text="@string/feedback"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/text_large"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnContact"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContact"
            style="@style/AppButton.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:text="@string/contact"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/text_large"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnWifi"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWifi"
            style="@style/AppButton.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/wifi"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/text_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="14dp"
        android:paddingBottom="100dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="6"
        android:layout_below="@id/clHeader"
        android:layout_above="@id/rlDeliveryStatus"/>

    <RelativeLayout
        android:id="@+id/rlDeliveryStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/background_delivery_item"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_screen_horizontal"
        android:layout_marginStart="@dimen/spacing_screen_horizontal"
        android:layout_marginEnd="@dimen/spacing_screen_horizontal"
        >

        <LinearLayout
            android:id="@+id/llDeliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_delivery_time"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:textColor="@color/text_color_4"
                android:textSize="@dimen/text_xxhuge"
                tools:text="15"

                />

            <TextView
                android:id="@+id/tvTimeUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="top"
                android:includeFontPadding="false"
                android:textColor="@color/text_color_4"
                android:textSize="@dimen/text_small"
                tools:text="min" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvFoodPreparationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/text_large"
            android:textColor="@color/add_button_background_color"
            android:layout_toEndOf="@id/llDeliveryTime"
            android:layout_marginStart="12dp"
            android:text="@string/your_food_is_preparing"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:id="@+id/tvDeliveryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/text_default"
            android:textColor="@color/text_color_3"
            android:layout_toEndOf="@id/llDeliveryTime"
            android:layout_marginStart="12dp"
            tools:text="It will be delivered at 4:30pm"
            android:layout_below="@id/tvFoodPreparationLabel"
            />

        <TextView
            android:id="@+id/tvViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/deliver_details_color"
            android:layout_alignParentEnd="true"
            android:text="@string/view_details"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            />

    </RelativeLayout>


</RelativeLayout>