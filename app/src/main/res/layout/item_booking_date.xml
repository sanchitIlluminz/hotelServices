<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlBookingDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/add_button_background_color"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="2dp"
    >

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_screen_horizontal_2"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/spacing_screen_horizontal_2"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_medium"
        tools:text="Jan" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="32dp"
        android:minHeight="32dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/calendar_date_color"
        android:textSize="@dimen/text_xxhuge"
        tools:background="@drawable/background_round_blue_date"
        tools:text="8" />

</RelativeLayout>